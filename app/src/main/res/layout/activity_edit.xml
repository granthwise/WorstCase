<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B5DDFF"
    tools:context=".EditActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/update_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Update Shelter Data"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="30dp"

            android:typeface="serif" />

        <EditText
            android:typeface="serif"
            android:id="@+id/edit_organization_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Organization ID Number"
            android:layout_below="@id/update_title"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:ems="10"
            android:inputType="number"
            />

        <EditText
            android:id="@+id/edit_organization_shelter_aid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Aid "
            android:layout_below="@id/edit_organization_provisions_header"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="225dp"
            android:layout_marginTop="10dp"
            android:typeface="serif"
            android:textSize="20dp"

            />

        <EditText
            android:id="@+id/edit_organization_shelter_water"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Shelter"
            android:layout_below="@id/edit_organization_shelter_food"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="225dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:typeface="serif"

            />


        <EditText
            android:typeface="serif"
            android:id="@+id/edit_organization_shelter_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Food"
            android:layout_below="@id/edit_organization_shelter_aid"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="225dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"

            />

        <EditText
            android:typeface="serif"
            android:id="@+id/edit_organization_shelter_maxcapacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Maximum Capacity"
            android:layout_below="@id/edit_organization_id"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/edit_organization_provisions_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_organization_shelter_maxcapacity"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:text="Supplies"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="20dp"
            android:typeface="serif"

            />

        <TextView
            android:typeface="serif"
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update current amount of provisions with numbers 0-2. 0 for empty reserves, 1 for low reserves, 2 for high reserves"
            android:layout_below="@id/update_button"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textSize="16dp"
            android:textColor="#595959"
            android:textAlignment="center"

            />



        <Button
            android:id="@+id/update_button"
            android:typeface="serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_organization_shelter_water"
            android:text="Update"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            />

    </RelativeLayout>
</ScrollView>
