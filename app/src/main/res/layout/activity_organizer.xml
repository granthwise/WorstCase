<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrganizerActivity"
    android:background="#fafa"
    >

    <TextView
        android:id="@+id/organization_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shelter Data"
        android:textSize="40dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"

        />

    <EditText
        android:id="@+id/organization_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Organization Name"
        android:layout_below="@id/organization_title"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="40dp"
        android:textSize="20dp"

        />

    <EditText
        android:id="@+id/organization_shelter_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Shelter Address"
        android:layout_below="@id/organization_name"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        />


    <EditText
        android:id="@+id/organization_shelter_landmarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nearby Landmarks"
        android:layout_below="@id/organization_shelter_address"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/organization_shelter_maxcapacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Maximum Capacity"
        android:layout_below="@id/organization_shelter_landmarks"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/organization_provisions_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shelter Data"
        android:layout_below="@id/organization_shelter_maxcapacity"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:textColor="#000000"

        />

    <CheckBox
        android:id="@+id/organization_checkbox_aid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Aid"
        android:layout_below="@id/organization_provisions_header"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        />

    <CheckBox
        android:id="@+id/organization_checkbox_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food"
        android:layout_below="@id/organization_checkbox_aid"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="0dp"
        android:textSize="20dp"
        />

    <CheckBox
        android:id="@+id/organization_checkbox_water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Water"
        android:layout_below="@id/organization_checkbox_food"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="0dp"
        android:textSize="20dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/organization_checkbox_water"
        />

</RelativeLayout>